@using Microsoft.AspNetCore.Mvc.TagHelpers
@using System.Net
@model Hacettepe.Domain.News

@{
    var title = Model.Id == 0 ? "Yeni Haber/Duyuru Oluşturma" : "Haber/Duyuru Güncelleme";
    ViewBag.Title = title;
    Layout = "_Layout";
}
<div class="row">
    <form method="POST" asp-formhelper="true" asp-area="Admin" asp-action="Save" asp-controller="Users" autocomplete="off">
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Content)
        <div class="mb-3">
            <label for="news_title" class="form-label">Başlık</label>
            <input id="news_title" type="text" class="form-control" asp-for="Title" value="@Model.Title" autofocus>
            <span class="invalid-feedback" asp-validation-for="Title"></span>
        </div>
        <div class="mb-3">
            <label for="news_brief" class="form-label">Özet</label>
            <input id="news_brief" type="text" class="form-control" asp-for="Brief" value="@Model.Brief">
            <span class="invalid-feedback" asp-validation-for="Brief"></span>
        </div>
        <div class="mb-3">
            <label for="news_language" class="form-label">Dil İçerik</label>
            <select id="news_language" type="text" class="form-control" asp-for="Language" value="@Model.Language">
                <option value="0">Türkçe</option>
                <option value="1">İngilizce</option>
            </select>
            <span class="invalid-feedback" asp-validation-for="Language"></span>
        </div>
        <div class="mb-3">
            <label for="gjs" class="form-label">İçerik</label>
            <div id="gjs"></div>
        </div>
        <div class="col-lg-12">
            <div class="cs_height_18"></div>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <button type="submit" class="btn btn-success"><i class="bi bi-save"></i> Kaydet</button>
            </div>
        </div>
    </form>
</div>

@Html.RenderPartialAsync("_Editor")