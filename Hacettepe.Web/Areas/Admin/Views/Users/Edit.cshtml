@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Hacettepe.Domain.User

@{
    var title = Model.Id == 0 ? "Yeni Kullanıcı Oluşturma" : "Kullanıcı Güncelleme";
    ViewBag.Title = title;
    Layout = "_Layout";
}
<div class="row">
  <form method="POST" asp-formhelper="true" asp-area="Admin" asp-action="Save" asp-controller="Users" autocomplete="off">
    @Html.HiddenFor(model=>model.Id)
    <div class="mb-3">
      <label for="user_name" class="form-label">Adı Soyadı</label>
      <input id="user_name" type="text" class="form-control" asp-for="Name" value="@Model.Name" required autofocus>
      <span class="invalid-feedback" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
      <label for="user_email" class="form-label">Email</label>
      <input id="user_email" type="text" class="form-control" asp-for="Email" value="@Model.Email">
      <span class="invalid-feedback" asp-validation-for="Email"></span>
    </div>
    <div class="mb-3">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" asp-for="IsActive" id="isActiveUser">
        <label class="form-check-label" for="isActiveUser">
          Aktif
        </label>
      </div>
    </div>
    <div class="col-lg-12">
      <div class="cs_height_18"></div>
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <button type="submit" class="btn btn-success"><i class="bi bi-save"></i> Kaydet</button>
      </div>
    </div>
  </form>
</div>
