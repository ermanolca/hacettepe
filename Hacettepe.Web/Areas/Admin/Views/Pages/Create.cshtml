@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Hacettepe.Application.Pages.CreatePageRequest

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<h2 class="cs_fs_40 cs_medium mb-0">Yeni Sayfa Oluşturma</h2>
<div class="row">
  <form method="POST" asp-formhelper="true" asp-area="Admin" asp-action="Create" asp-controller="Pages" class="needs-validation" autocomplete="off">
    <div class="col-lg-12">
      <label class="cs_input_label cs_heading_color">Sayfa Başlığı</label>
      <input id="title" type="text" class="form-control" asp-for="Title" value="@Model.Title" required autofocus>
      <span class="invalid-feedback" asp-validation-for="Title"></span>
    </div>
    <div class="col-lg-12">
      <label class="cs_input_label cs_heading_color">Url ismi</label>
      <input id="slug" type="text" class="form-control" asp-for="Slug" value="@Model.Slug">
      <span class="invalid-feedback" asp-validation-for="Slug"></span>
    </div>
    <div class="col-lg-12">
      <label class="cs_input_label cs_heading_color">Sayfa İçeriği</label>
      <textarea asp-for="Content" id="editor" class="form-control rounded-lg w-full h-full"  placeholder="Sayfa içerği"></textarea>
      <span class="invalid-feedback" asp-validation-for="Slug"></span>
    </div>
    <div class="col-lg-12">
      <div class="cs_height_18"></div>
      <button class="cs_btn cs_style_1">
        <span>Kaydet</span>
        <i>
          <img src="assets/img/icons/arrow_white.svg" alt="Icon">
          <img src="assets/img/icons/arrow_white.svg" alt="Icon">
        </i>
      </button>
    </div>
  </form>
</div>

@section Scripts {
  tinymce.init({
  selector: 'textarea#editor',
  });
}
