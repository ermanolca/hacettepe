@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Hacettepe.Domain.Page

@{
    ViewBag.Title = "";
    Layout = "_Layout";
    var title = Model.Id == 0 ? "Yeni Sayfa Oluşturma" : "Sayfa Güncelleme";
}
<h2 class="cs_fs_40 cs_medium mb-0">@title</h2>
<div class="row">
  <form method="POST" asp-forxmhelper="true" asp-area="Admin" asp-action="Save" asp-controller="Pages" class="needs-validation" autocomplete="off">
    @Html.HiddenFor(model=>model.Id)
    @Html.HiddenFor(model=>model.Content, new {id="page_content"})
    <div class="col-lg-12">
      <label class="cs_input_label cs_heading_color">Sayfa Başlığı</label>
      <input id="title" type="text" class="form-control" asp-for="Title" value="@Model.Title" required autofocus>
      <span class="invalid-feedback" asp-validation-for="Title"></span>
    </div>
    <div class="col-lg-12">
      <label class="cs_input_label cs_heading_color">Url ismi</label>
      <input id="slug" type="text" class="form-control" asp-for="Slug" value="@Model.Slug">
      <span class="invalid-feedback" asp-validation-for="Slug"></span>
    </div>
    <div class="col-lg-12">
      <label class="cs_input_label cs_heading_color">Sayfa İçeriği</label>
      <div id="gjs"></div>
    </div>
    <div class="col-lg-12">
      <div class="cs_height_18"></div>
      <button class="cs_btn cs_style_1">
        <span>Kaydet</span>
        <i>
          <img src="/assets/img/icons/arrow_white.svg" alt="Icon">
          <img src="/assets/img/icons/arrow_white.svg" alt="Icon">
        </i>
      </button>
    </div>
  </form>
</div>

@section Scripts {
  <script>
    tinymce.init({
      selector: '#editor',
            plugins: 'code table lists link image',
            toolbar: 'undo redo | formatselect | bold italic | alignleft aligncenter alignright | bullist numlist outdent indent | link image | code',
            menubar: 'file edit view insert format tools table'
    });
  </script>
}
